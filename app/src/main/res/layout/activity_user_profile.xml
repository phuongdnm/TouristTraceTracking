<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".Update.UserProfileActivity">


    <ImageView

        android:id="@+id/backgroud_ava"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:background="@drawable/goodmorning"
        app:layout_constraintBottom_toTopOf="@+id/guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">


    </ImageView>


    <androidx.constraintlayout.widget.Guideline

        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/Image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="220dp"
        app:layout_constraintBottom_toTopOf="@id/Profile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/backgroud_ava">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:focusableInTouchMode="true"
            android:src="@drawable/ava"
            app:civ_border_color="#ffffff"
            app:civ_border_width="1dp"
            app:layout_constraintBottom_toTopOf="@id/change_ava"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/change_ava"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Change your Image"
            android:textColor="@color/gradStart"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/profile_image">

        </TextView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/Profile"
        android:layout_width="wrap_content"
        android:layout_height="294dp"
        android:layout_marginTop="30dp"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toBottomOf="@id/Image"
        app:layout_constraintVertical_bias="0.0">

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TableLayout
                    android:id="@+id/txt_city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="0dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginBottom="15dp"
                    android:textColorHint="#000000"


                    >

                    <TableRow>

                        <TextView
                            android:layout_width="120dp"
                            android:layout_marginStart="10dp"

                            android:padding="10dip"
                            android:text=" First Name"
                            android:textColor="#000000"
                            android:textSize="15dp" />

                        <EditText
                            android:id="@+id/fName"
                            android:layout_width="279dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="50dp"
                            android:gravity="left"
                            android:hint="Your First Name"
                            android:inputType="text"
                            android:lines="1"
                            android:padding="12dip"
                            android:textColor="#000000"
                            android:textSize="15dp" />
                    </TableRow>


                </TableLayout>

                <TableLayout

                    android:id="@+id/txt_lastname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginBottom="10dp"
                    android:textColorHint="#000000"


                    >

                    <TableRow>

                        <TextView
                            android:layout_width="120dp"
                            android:layout_marginStart="10dp"
                            android:padding="10dip"
                            android:text=" Last Name "
                            android:textColor="#000000"
                            android:textSize="15dp" />

                        <EditText
                            android:id="@+id/lName"
                            android:layout_width="277dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="50dp"
                            android:gravity="left"
                            android:hint="Your Last Name"
                            android:inputType="text"
                            android:lines="1"
                            android:padding="12dp"

                            android:textColor="#000000"
                            android:textSize="15dp" />
                    </TableRow>


                </TableLayout>

                <TableLayout
                    android:id="@+id/txt_date_of_birth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="0dp"

                    android:layout_marginEnd="0dp"
                    android:layout_marginBottom="10dp"
                    android:textColorHint="#000000">
                    <!--<com.santalu.maskedittext.MaskEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Date of birth"
            android:textColor="#000000"
            android:shadowColor="#000000"
            android:lines="1"
            android:shadowDx="2"
            android:shadowDy="1.3"
            android:shadowRadius="1.6"
            android:inputType="datetime"
            app:met_mask="##/##/####"

            />-->
                    <TableRow>

                        <TextView
                            android:layout_width="120dp"
                            android:layout_marginStart="10dp"
                            android:padding="10dip"
                            android:text=" Date of birth "
                            android:textColor="#000000"
                            android:textSize="15dp" />

                        <com.santalu.maskedittext.MaskEditText
                            android:id="@+id/birthday"
                            android:layout_width="277dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="50dp"

                            android:gravity="left"
                            android:hint="Date of birth"
                            android:lines="1"
                            android:padding="12dip"
                            android:textColor="#000000"
                            android:textSize="15dp"
                            app:met_mask="####/##/##" />
                    </TableRow>
                </TableLayout>

                <TableLayout
                    android:id="@+id/txt_email2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="0dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginBottom="10dp"
                    android:textColorHint="#000000"


                    >

                    <TableRow>

                        <TextView
                            android:layout_width="120dp"
                            android:layout_marginStart="10dp"
                            android:inputType="number"
                            android:padding="10dip"
                            android:text=" Phone"
                            android:textColor="#000000"

                            android:textSize="15dp" />

                        <EditText
                            android:id="@+id/phone"
                            android:layout_width="279dp"
                            android:layout_marginLeft="10dp"

                            android:layout_marginRight="50dp"
                            android:gravity="left"
                            android:hint="Your Phone"
                            android:lines="1"
                            android:padding="12dip"
                            android:text=""
                            android:textColor="#000000"
                            android:textSize="15dp" />
                    </TableRow>


                </TableLayout>

                <TableLayout
                    android:id="@+id/txt_nationality"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="0dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginBottom="10dp"
                    android:textColorHint="#000000"

                    >

                    <TableRow>

                        <TextView
                            android:layout_width="120dp"
                            android:layout_marginStart="10dp"

                            android:padding="10dip"
                            android:text=" Nationality"
                            android:textColor="#000000"
                            android:textSize="15dp" />

                        <EditText

                            android:id="@+id/nationality"
                            android:layout_width="277dp"
                            android:layout_marginLeft="10dp"

                            android:layout_marginRight="50dp"
                            android:gravity="left"
                            android:hint="Your Nationality"
                            android:inputType="text"
                            android:lines="1"
                            android:padding="12dip"
                            android:textColor="#000000"
                            android:textSize="15dp" />
                    </TableRow>
                </TableLayout>


                <TableLayout
                    android:id="@+id/txt_email1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="0dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginBottom="10dp"
                    android:textColorHint="#000000"


                    >

                    <TableRow>

                        <TextView
                            android:layout_width="120dp"
                            android:layout_marginStart="10dp"
                            android:padding="10dip"
                            android:text=" Email"
                            android:textColor="#000000"
                            android:textSize="15dp" />

                        <EditText
                            android:id="@+id/email"
                            android:layout_width="273dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="50dp"
                            android:gravity="left"
                            android:hint="Your Email"
                            android:inputType="textEmailAddress"
                            android:lines="1"
                            android:padding="12dip"

                            android:textColor="#000000"
                            android:textSize="15dp" />
                    </TableRow>


                </TableLayout>

                <TableLayout
                    android:id="@+id/txt_email3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginBottom="15dp"
                    android:textColorHint="#000000"


                    >

                    <TableRow>

                        <TextView
                            android:layout_width="120dp"
                            android:layout_marginStart="10dp"
                            android:padding="10dip"
                            android:text=" Country"

                            android:textColor="#000000"
                            android:textSize="15dp" />

                        <EditText
                            android:id="@+id/country"
                            android:layout_width="282dp"
                            android:layout_marginLeft="10dp"

                            android:layout_marginRight="50dp"
                            android:gravity="left"
                            android:hint="Your Country:"
                            android:inputType="text"
                            android:lines="1"
                            android:padding="12dip"

                            android:textColor="#000000"
                            android:textSize="15dp" />
                    </TableRow>


                </TableLayout>

                <TableLayout
                    android:id="@+id/txt_email4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginBottom="15dp"
                    android:textColorHint="#000000"


                    >

                    <TableRow>

                        <TextView
                            android:layout_width="120dp"
                            android:layout_marginStart="10dp"
                            android:padding="10dip"
                            android:text=" City "
                            android:textColor="#000000"
                            android:textSize="15dp" />

                        <EditText
                            android:id="@+id/city"
                            android:layout_width="273dp"
                            android:layout_marginLeft="10dp"

                            android:layout_marginRight="50dp"
                            android:gravity="left"
                            android:hint="Your City"
                            android:inputType="text"
                            android:lines="1"

                            android:padding="12dip"
                            android:textColor="#000000"
                            android:textSize="15dp" />
                    </TableRow>


                </TableLayout>


            </LinearLayout>
        </ScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <fragment
        android:id="@+id/tapBarFragment"
        android:name="vn.edu.usth.touristtracetracking.TapBarFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Profile"
        app:layout_constraintTop_toTopOf="parent"></fragment>

    <Button
        android:id="@+id/bt_save"
        android:layout_width="wrap_content"
        android:layout_height="41dp"
        android:background="?android:attr/selectableItemBackground"
        android:text="Save"
        android:textColor="#000000"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteY="0dp">

    </Button>

</androidx.constraintlayout.widget.ConstraintLayout>